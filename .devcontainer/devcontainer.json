{
  "name": "BabylonJS Angular Starter",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:20",
  "customizations": {
    "codespaces": {
      "openFiles": ["README.md", "src/app/app.ts"]
    },
    "vscode": {
      "extensions": [
        "angular.ng-template"
      ]
    }
  },
  "forwardPorts": [4200],
  "postCreateCommand": "npm install",
  "postStartCommand": "npm start",
  "portsAttributes": {
    "4200": {
      "label": "Angular dev server",
      "onAutoForward": "openPreview"
    }
  },
  "remoteUser": "node"
}
